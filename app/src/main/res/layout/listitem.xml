<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageBird"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/camerasec" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:backgroundTint="#FFF"
            android:text="="
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:outlineSpotShadowColor="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBirdName"
        android:layout_toRightOf="@+id/imageBird"
        android:text="Bird Name"
        android:textSize="18sp"
        android:textColor="#212121"
        android:textStyle="bold"
        android:layout_marginTop="9dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textBirdName"
        android:layout_marginTop="2.5dp"
        android:layout_toRightOf="@+id/imageBird"
        android:text="Location Sighting"
        android:fontFamily="sans-serif-medium"
        android:textColor="#C6C6C6"
        android:id="@+id/textLocation"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDate"
        android:layout_below="@+id/textLocation"
        android:layout_toRightOf="@+id/imageBird"
        android:text="Date"
        android:textColor="#C1C1C1"
        android:textSize="19dp"
        android:textStyle="italic"
        android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countbird"
            android:layout_below="@+id/textDate"
            android:layout_toRightOf="@+id/imageBird"
            android:text="."
            android:textColor="#C1C1C1"
            android:textSize="1dp"
            android:textStyle="italic"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notes"
            android:layout_below="@+id/textDate"
            android:layout_toRightOf="@+id/imageBird"
            android:text="."
            android:textColor="#C1C1C1"
            android:textSize="1dp"
            android:textStyle="italic"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_below="@+id/textDate"
            android:layout_toRightOf="@+id/imageBird"
            android:text="."
            android:textColor="#C1C1C1"
            android:textSize="1dp"
            android:textStyle="italic"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/country"
            android:layout_below="@+id/textDate"
            android:layout_toRightOf="@+id/imageBird"
            android:text="."
            android:textColor="#C1C1C1"
            android:textSize="1dp"
            android:textStyle="italic"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latitude"
            android:layout_below="@+id/textDate"
            android:layout_toRightOf="@+id/imageBird"
            android:text="."
            android:textColor="#C1C1C1"
            android:textSize="1dp"
            android:textStyle="italic"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/longitude"
            android:layout_below="@+id/textDate"
            android:layout_toRightOf="@+id/imageBird"
            android:text="."
            android:textColor="#C1C1C1"
            android:textSize="1dp"
            android:textStyle="italic"
            android:layout_marginTop="2dp"/>


    </RelativeLayout>




</androidx.cardview.widget.CardView>
